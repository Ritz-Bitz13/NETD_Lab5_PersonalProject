<UserControl x:Class="WEBD_Lab2.LendOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WEBD_Lab2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="1" >
            <Label HorizontalAlignment="Center" Name="lblTitle" Content="Lend Out" FontWeight="Bold" FontSize="16"></Label>
            <Label Name="lblName" HorizontalAlignment="Center">Name:</Label>
            <TextBox Name="txtName" Width="150"></TextBox>
            <Label Name="lblEmployee" HorizontalAlignment="Center" >Employee ID:</Label>
            <TextBox Name="txtEmployee" Width="150"></TextBox>
            <Label Name="lblDescription" HorizontalAlignment="Center">Description of Equipment:</Label>
            <TextBox Name="txtDescription" Width="150"></TextBox>
            <Label Name="lblPhone" HorizontalAlignment="Center">Phone Number:</Label>
            <TextBox Name="txtPhone" Width="150"></TextBox>
            <TextBlock HorizontalAlignment="Center">
                <Button Name="btnAdd" Margin="20" Width="100" Click="AddToDatabase">Add to Database</Button>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
